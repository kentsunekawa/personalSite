type Query {
  posts(lang: Lang, searchPostsInput: SearchPostsInput): [Post!]!
  post(slug: String!, lang: Lang): Post
}

enum PostLabel {
  HIGH_PRIORITY
}

enum PostStatus {
  DRAFT
  PUBLISHED
}

input SearchPostsInput {
  status: [PostStatus!]
  labels: [PostLabel!]
}

type Post {
  id: ID!
  title: String!
  date: String!
  labels: [PostLabel!]!
  slug: String!
  status: PostStatus!
  content: String!
}
